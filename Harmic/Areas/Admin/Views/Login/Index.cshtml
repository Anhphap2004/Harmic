@using Harmic.Utilities;
@model Harmic.Areas.Admin.Models.AdminUser;
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Đăng Nhập</title>
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
	@if (TempData["SuccessMessage"] != null)
	{
		<div id="successMessage" class="alert alert-success"
			 style="
            position: fixed; /* Đảm bảo thông báo không đẩy các phần tử khác */
            top: 20px; /* Cách mép trên 20px */
            right: 60px; /* Cách mép phải 20px */
            max-width: 370px; /* Đảm bảo không vượt quá kích thước khung nhìn */
            padding: 15px 20px;
            border-radius: 8px;
            background-color: #28a745;
            color: #fff;
            font-size: 16px;
            font-family: Arial, sans-serif;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            z-index: 9999; /* Luôn ở trên cùng */
            text-align: left; /* Văn bản căn trái trong hộp thông báo */
            word-wrap: break-word; /* Ngắt dòng nếu nội dung quá dài */
						 ">
			@TempData["SuccessMessage"]
		</div>
	}
	<div class="wrapper">
		<div class="container vh-100 d-flex justify-content-center align-items-center">
			<div class="w-50 p-4 border rounded shadow-sm">
				<h3 class="text-center mb-4">Đăng Nhập</h3>
				<!-- Form Đăng Nhập -->
				<form asp-controller="Login" asp-action="Index" method="post">
					<!-- Email -->
					<div class="mb-3">
						<label for="Text" class="form-label">Tên Đăng Nhập</label>
						<input type="text" asp-for="Username" class="form-control" id="Text"  placeholder="Nhập Tên Người Dùng" required>
					</div>
					<!-- Password -->
					<div class="mb-3">
						<label for="password" class="form-label">Mật Khẩu</label>
						<input type="password" asp-for="Password" class="form-control" id="password" placeholder="Nhập mật khẩu" required>
					</div>
					<!-- Remember Me -->
					<div class="form-check mb-3">
						<input asp-for="IsActive" class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
						<label class="form-check-label" for="rememberMe">
							Ghi nhớ đăng nhập
						</label>
					</div>
					<!-- Submit Button -->
					<button type="submit" class="btn btn-primary w-100">Đăng Nhập</button>
					<!-- Link Quên Mật Khẩu -->
					<div class="text-center mt-3">
						<a href="/forgot-password" class="text-decoration-none">Quên mật khẩu?</a>
					</div>
					<!-- Link Đăng Ký -->
					<div class="text-center mt-3">
						<p>Bạn chưa có tài khoản? <a href="~/Admin/register/Index" class="text-decoration-none">Đăng ký ngay</a></p>
					</div>
				</form>
			</div>
		</div>
	</div>
	<!-- Bootstrap JS -->
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
